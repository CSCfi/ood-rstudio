<% require "/ood/deps/util/attributes/csc_smart_attributes" -%>
---
cluster: "puhti"
cacheable: false
attributes:
  csc_cores:
      max: 4
      cacheable: false
  csc_nvme:
      value: 32
  csc_slurm_partition:
      value: "interactive"
  csc_memory:
      min: 2
      value: 2
      cacheable: false
  csc_time:
    cacheable: false
  csc_slurm_limits:
    data:
      partition: "interactive"
  modules:
      label: "R version"
      widget: select
      options:
      - "r-env-singularity/4.0.3"
      - "r-env-singularity/4.0.5"
  mt:
    label: "Multithreadded"
    widget: "check_box"
form:
  - csc_cores
  - csc_memory
  - csc_nvme
  - csc_slurm_project
  - csc_slurm_partition
  - csc_time
  - modules
  - mt
  - csc_slurm_limits
