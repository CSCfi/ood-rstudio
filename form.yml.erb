---
cluster: "puhti"
cacheable: false
attributes:
  csc_cores:
      max: 4
      cacheable: false
  csc_nvme:
      value: 32
      # TODO: improve form validation to do this in a more convenient way
      data:
        min: min_nvme
  csc_slurm_partition:
    value: "interactive"
    select:
      - "interactive"
      - "small"
      - "fmi"
      - "fmitest"
  csc_slurm_reservation:
    partitions:
      - "interactive"
      - "small"
      - "fmi"
      - "fmitest"
  csc_memory:
      min: 2
      value: 2
      cacheable: false
  csc_time:
    cacheable: false
  csc_slurm_limits:
    data:
      limits:
        interactive:
          min_nvme: 1
        small:
          min_nvme: 1
  modules:
      label: "R version"
      widget: select
      options:
      - "r-env-singularity/4.1.1"
      - "r-env-singularity/4.0.5"
      - "r-env-singularity/4.0.3"
  mt:
    label: "Multithreaded"
    widget: "check_box"
  csc_reset_cache:
    app: "sys/ood-rstudio"
  csc_extra_desc:
    desc: |
      <a href="https://docs.csc.fi/computing/webinterface/rstudio/" target="_blank">Documentation</a>

form:
  - csc_extra_desc
  - csc_slurm_reservation
  - csc_slurm_project
  - csc_slurm_partition
  - csc_header_resources
  - csc_cores
  - csc_memory
  - csc_nvme
  - csc_time
  - csc_header_settings
  - modules
  - mt
  - csc_reset_cache
  - csc_slurm_limits
